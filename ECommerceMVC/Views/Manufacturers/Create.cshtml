@model ECommerceMVC.Models.Products.Manufacturer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Manufacturer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input type="text" id="redirection" name="redirection" value="" class="d-none"/>
          
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                Save
            </button>
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle">Is it your last word ?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>
                                Do you also want to add products related to this all new manufacturer?
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" value="Create" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" value="Create" id="no" class="btn btn-secondary">No, Just Save it</button>
                            <button type="submit" value="Create" id="yes" class="btn btn-primary">Yes</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(document).ready(function () {
        var submitActor = null;
        $('form').on('submit', function (e) {
            var red = $('#redirection').val($(submitActor).attr("id"))
        })
        $("button").click(function (event) {
            submitActor = this;
        });
    });
    
</script>
}
