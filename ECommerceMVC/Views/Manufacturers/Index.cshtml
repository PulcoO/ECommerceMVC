@model IEnumerable<ECommerceMVC.Models.Products.Manufacturer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministration.cshtml";
}

<div id="wrapper">
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            <!-- Begin List Page Content -->
            <section id="ListSection">
                <div class="container-fluid">
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header d-flex justify-content-between py-3">
                            <h6 class="m-0 font-weight-bold text-primary">List | Manufacturers</h6>
                            <button type="button" class="btn btn-primary"><a asp-action="Create" style="color:white"><i class="fas fa-plus"></i></a></button>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>ID</th>
                                            <th>Date of creation</th>
                                            <th>Number of product</th>
                                            <th>Number of product sale</th>
                                            <th>

                                            </th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>ID</th>
                                            <th>Date of creation</th>
                                            <th>Number of product</th>
                                            <th>Number of prodcut sale</th>
                                            <th>

                                            </th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Id)
                                                </td>
                                                <td>2011/04/25</td>
                                                <td>61</td>
                                                <td>320</td>
                                                <th>
                                                    <a class="editManufacturer" id="@Url.Action("Edit","Manufacturer",item.Id)" style="color:forestgreen"><i class="fas fa-edit"></i></a>
                                                    <a asp-action="Details" asp-route-id="@item.Id" style="color:cadetblue"><i class="fas fa-info-circle"></i></a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" style="color:red"><i class="fas fa-trash"></i></a>
                                                </th>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </section>

            <section id="CreateSection">
            </section>

            <section id="EditSection">
            </section>

            <section id="TopVendeurChart">
            </section>

        </div>
        <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->
</div>

<!-- Begin Create Page Content -->

@section AdministrationManufacturerScripts {
    <script>
    $(function () {
            $.ajax({
                type: "GET",
                url: "@Url.Action("Create", "Manufacturers")",
                contentType: "html",
                success: function (html) {
                    $('#CreateSection').html(html);
                },
                error: function (msg) {
                    console.log("error")
                }
            });
    });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

